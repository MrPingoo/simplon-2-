{% extends 'base.html.twig' %}

{% block title %}Pizza{% endblock %}

{% block body %}
    <div class="album py-5 bg-light">
        <div class="container">

            <div class="row">
                {% for p in products %}
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            {% set first = p.pictures|first %}
                            <img class="img-fluid" src="/uploads/products/{{ first.path }}"/>
                            <div class="card-body">
                                <p class="card-text">{{ p.name }}</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a href="{{ path('product_show', {id: p.id}) }}" class="btn btn-sm btn-outline-secondary">Voir</a>
                                    </div>
                                    <small class="text-muted">{{ p.createdBy.email }}</small>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}

            </div>
        </div>
    </div>

{% endblock %}