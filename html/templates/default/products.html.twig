{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>ShippingCost</th>
                <th>Address</th>
                <th>Lat</th>
                <th>Lng</th>
                <th>CreatedAt</th>
                <th>State</th>
                <th>StripeTransac</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.shippingCost }}</td>
                <td>{{ product.address }}</td>
                <td>{{ product.lat }}</td>
                <td>{{ product.lng }}</td>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ product.state ? 'Yes' : 'No' }}</td>
                <td>{{ product.stripeTransac }}</td>
                <td>
                    {{ include('default/_delete_form.html.twig') }}
                    <a class="btn btn-primary" href="{{ path('product_show', {'id': product.id}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_new') }}" class="btn btn-success">Create new</a>
{% endblock %}
