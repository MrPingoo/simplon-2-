<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Julian">
    <title>{% block title %}Simplon Pizza{% endblock %}</title>

    {% block stylesheets %}
        <link href="/assets/css/bootstrap.min.css" rel="stylesheet">
        <link href="/assets/css/marketplace.css" rel="stylesheet">
    {% endblock %}
</head>
<body>

{% include 'partials/_nav.html.twig' %}

<main role="main">

    <div class="album py-5 bg-light">
        <div class="container">

            <div class="row">

                <div class="col-sm-8 col-md-7 py-4">
                    {% block body %}{% endblock %}
                </div>

            </div>
        </div>
    </div>
</main>

<footer class="text-muted">
    <div class="container">
        <p class="float-right">
            <a href="#">Back to top</a>
        </p>
        <p>Pizza</p>
    </div>
</footer>


{% block javascripts %}
    <script>window.jQuery || document.write('<script src="/assets/js/jquery-3.3.1.slim.min.js"><\/script>')</script>
    <script type="text/javascript" src="/assets/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="/assets/js/jquery-3.3.1.slim.min.js"></script>
{% endblock %}


</body>
</html>
